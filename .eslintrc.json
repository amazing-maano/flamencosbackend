{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "camelcase": "off",
        "no-underscore-dangle": "warn",
        "no-console": "off",
        "quotes":                       ["warn", "single", {"avoidEscape":false, "allowTemplateLiterals":true}],
        "semi":                         ["warn", "always"],
        "semi-spacing":                 ["warn", {"before":false, "after":true}],
        "semi-style":                   ["warn", "last"]
    }
}
